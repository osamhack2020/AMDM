<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RFID 태그를 준비중입니다."
        android:textColor="#000000"
        android:gravity="center"
        android:layout_margin="10dp"
        android:textSize="7pt"
        android:id="@+id/ready_rfid"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RFID를 태그해주시기 바랍니다."
        android:id="@+id/tag_rfid"
        android:textColor="#000000"
        android:alpha="0.2"
        android:gravity="center"
        android:layout_margin="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="완료버튼 눌러주시면 락이 풀립니다."
        android:id="@+id/confirm_rfid"
        android:textColor="#000000"
        android:alpha="0.2"
        android:gravity="center"
        android:layout_margin="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rfid_dialog_confirm"
            android:text="완료"
            android:clickable="false"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rfid_dialog_cancel"
            android:text="취소"/>

    </LinearLayout>


</LinearLayout>