<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TurnOnPackage.TurnOnActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/colorBackground">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/loading_unlock"
        android:scaleX="1.5"
        android:scaleY="1.5"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="현재 휴대폰이 잠금상태입니다"
        android:gravity="center"
        android:fontFamily="@font/tmoneyroundwind_extrabold"
        android:layout_margin="20dp"
        android:textSize="12pt"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="RFID 기기를 통하여 휴대폰을 활성화해보세요!"
        android:fontFamily="@font/tmoneyroundwind_extrabold"
        android:layout_marginBottom="10dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/broad_RFIDtag_button"
        android:text="태그하기"
        android:background="#ffffff"
        android:textColor="#000000"
        android:fontFamily="@font/tmoneyroundwind_extrabold"
        android:onClick="onClickRFID"/>

</LinearLayout>