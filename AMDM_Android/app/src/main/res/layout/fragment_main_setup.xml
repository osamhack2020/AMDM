<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainfragment.MainSetupFragment"
    android:orientation="vertical"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


<!-- 설정에는 1.로그아웃 2.태그 대기시간변경 3.   -->



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="25dp"
            android:background="@drawable/softrectangle_button"
            android:padding="10dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginEnd="5dp"
                    android:text="이름 :"
                    android:textColor="#000000"
                    android:textSize="7pt"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/nameview"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="김영호"
                    android:textColor="#000000"
                    android:textSize="10pt"
                    android:layout_toEndOf="@+id/nameview"
                    android:layout_centerVertical="true"
                    android:id="@+id/username"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="정보수정"
                    android:textSize="5pt"
                    android:background="@drawable/softrectangle_button"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="5pt"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:text="계정생성일 : 2019.10.14"
                android:textColor="#000000"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/softrectangle_button"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="공지사항"
                android:padding="10dp"
                android:textColor="#000000"
                android:background="@drawable/bottom_line"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="자주하는 질문(Q&amp;A)"
                android:padding="10dp"
                android:textColor="#000000"
                android:background="@drawable/bottom_line"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="관리자 어플 실행"
                android:padding="10dp"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="25dp"
            android:background="@drawable/softrectangle_button"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="개발자 정보"
                android:padding="10dp"
                android:textColor="#000000"
                android:background="@drawable/bottom_line"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이용약관"
                android:padding="10dp"
                android:textColor="#000000"
                android:background="@drawable/bottom_line"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="앱 평가하기"
                android:padding="10dp"
                android:textColor="#000000"/>
        </LinearLayout>
    </LinearLayout>



</ScrollView>